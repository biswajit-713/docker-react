node {
    stage('checkout code') {
        echo "checkout code"
    }
    stage('build image for dev') {
        echo "build image for dev"
    }
    stage('unit test') {
        echo "unit test"
    }
    stage('build prod image') {
        echo "build prod image"
    }    
    stage('deploy in SIT') {
        echo "deploy in SIT"
    }
    stage('run UI tests') {
        echo "run UI tests"
    }
    stage('tag image and push') {
        echo "tag image and push"
    }
}